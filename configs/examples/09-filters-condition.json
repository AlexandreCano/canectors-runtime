{
  "connector": {
    "name": "filters-condition-example",
    "version": "1.0.0",
    "description": "Example with conditional filter to filter data",
    "input": {
      "type": "httpPolling",
      "endpoint": "https://api.example.com/products",
      "schedule": "*/5 * * * *",
      "timeoutMs": 30000
    },
    "filters": [
      {
        "type": "condition",
        "expression": "status == 'active' && price > 0",
        "lang": "simple",
        "onTrue": "continue",
        "onFalse": "skip",
        "onError": "fail"
      }
    ],
    "output": {
      "type": "httpRequest",
      "endpoint": "https://api.destination.com/products",
      "method": "POST"
    }
  }
}
