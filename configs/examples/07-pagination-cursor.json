{
  "connector": {
    "name": "pagination-cursor-example",
    "version": "1.0.0",
    "description": "Example with cursor-based pagination",
    "input": {
      "type": "httpPolling",
      "endpoint": "https://api.example.com/events",
      "schedule": "*/5 * * * *",
      "timeoutMs": 30000,
      "dataField": "events",
      "pagination": {
        "type": "cursor",
        "cursorParam": "after",
        "cursorPath": "pagination.next_cursor"
      },
      "authentication": {
        "type": "bearer",
        "credentials": {
          "token": "${API_TOKEN}"
        }
      }
    },
    "filters": [],
    "output": {
      "type": "httpRequest",
      "endpoint": "https://api.destination.com/events",
      "method": "POST"
    }
  }
}
